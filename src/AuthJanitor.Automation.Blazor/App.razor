<Blazorise.ThemeProvider Theme="@theme">
    <CascadingAuthenticationState>
        <Router AppAssembly="typeof(Program).Assembly">
            <Found Context="routeData">
                <AuthorizeRouteView RouteData="routeData" DefaultLayout="typeof(MainLayout)" />
            </Found>
            <NotFound>
                <div style="display:block;"
                     class="text-center p-4 bg-light border border-danger rounded mx-auto my-5">
                    <h1>(╯°□°）╯︵ ┻━┻</h1>
                    <h3>You've landed on a broken link.</h3>
                    <p class="my-3">
                        If you think this message is the result of a software bug, please
                        <a href="https://github.com/microsoft/AuthJanitor/issues/new">open a new issue</a>
                        with the AuthJanitor GitHub repository.
                    </p>
                </div>
            </NotFound>
        </Router>
    </CascadingAuthenticationState>
</Blazorise.ThemeProvider>
